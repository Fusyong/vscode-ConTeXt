{
  "name": "context-syntax-plus",
  "displayName": "ConTeXt Syntax plus",
  "description": "Syntax highlights and outline view for ConTeXt files.",
  "version": "0.0.2",
  "publisher": "HuangFusyong",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fusyong/vscode-ConTeXt.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:ConTeXt"
  ],
  "icon": "icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ConTeXt",
        "aliases": [
          "ConTeXt",
          "context"
        ],
        "extensions": [
          ".lmtx",
          ".mkiv",
          ".tex"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ConTeXt",
        "scopeName": "text.tex.context",
        "path": "./syntaxes/context.tmLanguage"
      }
    ],
    "configuration": {
      "title": "ConTeXt Syntax Plus",
      "properties": {
        "context-syntax-plus.customTitles": {
          "type": "object",
          "default": {
            "bu": 0,
            "zhang": 1,
            "jie": 2,
            "xiaojie": 3,
            "xxiaojie": 4,
            "xxxiaojie": 5,
            "xxxxxiaojie": 6,
            "ce": 0 ,
            "danyuan": 1,
            "kewen": 2,
            "xiaoti": 3,
            "xxiaoti": 4,
            "xxxiaoti": 5,
            "xxxxxiaoti": 6
          },
          "description": "自定义 ConTeXt 各级级别（0-6），如：部、章、节、小结……",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 6
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "vsce": "^2.21.1"
  },
  "bugs": {
    "url": "https://github.com/Fusyong/vscode-ConTeXt/issues"
  },
  "homepage": "https://github.com/Fusyong/vscode-ConTeXt#readme",
  "author": "Huang Fusyong"
}
