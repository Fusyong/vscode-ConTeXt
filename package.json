{
  "name": "context-grammar",
  "displayName": "ConTeXt Syntax",
  "description": "Syntax highlights and outline view for ConTeXt files.",
  "version": "0.0.2",
  "publisher": "Fusyong",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fusyong/vscode-ConTeXt.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:context-grammar"
  ],
  "icon": "images/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ConTeXt",
        "aliases": [
          "ConTeXt",
          "context"
        ],
        "extensions": [
          ".lmtx",
          ".mkiv",
          ".tex"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ConTeXt",
        "scopeName": "text.tex.context",
        "path": "./syntaxes/context.tmLanguage"
      }
    ],
    "configuration": {
      "title": "ConTeXt Grammar",
      "properties": {
        "context-grammar.customTitles": {
          "type": "object",
          "default": {
            "ce": 1,
            "danyuan": 2,
            "kewen": 3,
            "xiaobiaoti": 4,
            "xiaoxiaobiaoti": 5,
            "xiaoxiaoxiaobiaoti": 6,
            "bu": 1,
            "zhang": 2,
            "jie": 3,
            "xiaojie": 4,
            "xiaoxiaojie": 5,
            "xiaoxiaoxiaojie": 6
          },
          "description": "自定义 ConTeXt 各级级别（0-6），如：部、章、节、小结……",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 6
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "bugs": {
    "url": "https://github.com/Fusyong/vscode-ConTeXt/issues"
  },
  "homepage": "https://github.com/Fusyong/vscode-ConTeXt#readme",
  "author": "Huang Fusyong"
}
